# ATOM-GPT Configuration Template
# Copy this file to .env and customize for your setup

# Database Configuration
DATABASE_PATH=backend/database/atom_gpt.db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=7  # days

# LM Studio Configuration
LM_STUDIO_URL=http://192.168.56.1:8080
LM_STUDIO_FALLBACK_URL=http://localhost:8080

# Backend Server Configuration
FLASK_PORT=8000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=true

# Model Configuration
MODEL_PATH=backend/training/out-darklyrics/ckpt.pt
FALLBACK_COMPLETIONS=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development
DEBUG=true
LOG_LEVEL=INFO