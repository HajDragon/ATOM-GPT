# LM Studio Configuration
# Set these environment variables to configure LM Studio connection

# Primary LM Studio URL (default: http://localhost:1234)
LM_STUDIO_URL=http://192.168.56.1:8080

# Fallback LM Studio URL (default: http://localhost:8080)
LM_STUDIO_FALLBACK_URL=http://localhost:8080

# Optional: LM Studio API Key (if authentication is required)
# LM_STUDIO_API_KEY=your_api_key_here

# Backend Server Configuration
FLASK_PORT=8000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=true

# Model Configuration
MODEL_PATH=backend/training/out-darklyrics/
FALLBACK_COMPLETIONS=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
